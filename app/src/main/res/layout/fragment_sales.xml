<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hirdetés Feladása"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <EditText
            android:id="@+id/inputName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Autó márkája és típusa"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/inputPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ár (pl. 2.500.000 Ft)"
            android:inputType="text"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/inputLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telephely / Város"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnSelectImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Képek kiválasztása (Max 5)"
            android:backgroundTint="#9C27B0"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/txtImageCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nincs kép kiválasztva"
            android:textColor="#757575"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Hirdetés Beküldése"
            android:backgroundTint="#2196F3"/>

    </LinearLayout>
</ScrollView>